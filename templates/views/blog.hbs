    {{!-- goup --}}
<div class="goup">
        <i title="Goto top" class="fa fa-angle-double-up" aria-hidden="true"></i>
</div>

    <!-- Button trigger modal -->
    <!-- Full screen modal -->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Make a Post ðŸš©</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    {{!-- showing errors --}}
                    <div class="errmsg">

                    </div>
                    {{!-- showing spinners  --}}

                    <div class="spinner">
                        <div class="spinner-border text-success" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>

                    {{!-- content --}}
                    {{!-- heading --}}
                    <div class="mb-5">
                        <label for="exampleFormControlTextarea1" class="form-label">Heading</label>
                        <textarea class="form-control" id="heading" rows="3"></textarea>
                    </div>

                    {{!-- Description --}}
                    <div class="mb-5">
                        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                        <textarea class="form-control" id="description" rows="10"></textarea>
                    </div>

                    {{!-- file  --}}
                    <label for="exampleFormControlTextarea1" class="form-label">Upload Picture</label>
                    <br>
                    <input type="file" id="blogpic">

                    {{!-- content --}}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="post-but" class="btn btn-primary">Post

                        <svg class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16"
                            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path
                                d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd"
                                d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- /Full screen modal -->

